<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="010-create-conversation-read-table" author="qoldan-qolga">
        <createTable tableName="conversation_read">
            <column name="conversation_id" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="last_read_at" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="conversation_read" columnNames="conversation_id, user_id" constraintName="conversation_read_pkey"/>
        <addForeignKeyConstraint baseTableName="conversation_read" baseColumnNames="conversation_id"
            constraintName="fk_conversation_read_conversation" referencedTableName="conversations" referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="conversation_read" baseColumnNames="user_id"
            constraintName="fk_conversation_read_user" referencedTableName="users" referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>
