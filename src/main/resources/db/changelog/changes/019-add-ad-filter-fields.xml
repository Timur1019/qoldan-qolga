<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="019-add-ad-filter-fields" author="app">
        <addColumn tableName="advertisements">
            <column name="seller_type" type="varchar(20)">
                <constraints nullable="true"/>
            </column>
            <column name="has_license" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="works_by_contract" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="urgent_bargain" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="give_away" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
