<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="021-add-advertisements-indexes" author="qoldan-qolga">
        <createIndex tableName="advertisements" indexName="idx_ad_user_id">
            <column name="user_id"/>
        </createIndex>
        <createIndex tableName="advertisements" indexName="idx_ad_status">
            <column name="status"/>
        </createIndex>
        <createIndex tableName="advertisements" indexName="idx_ad_category">
            <column name="category"/>
        </createIndex>
        <createIndex tableName="advertisements" indexName="idx_ad_created_at">
            <column name="created_at"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
