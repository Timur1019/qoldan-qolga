<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="011-create-ad-reports-table" author="qoldan-qolga">
        <createTable tableName="ad_reports">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="ad_reports_pkey"/>
            </column>
            <column name="ad_id" type="BIGINT">
                <constraints nullable="false" references="advertisements(id)" foreignKeyName="fk_ad_reports_ad" deleteCascade="true"/>
            </column>
            <column name="reporter_id" type="VARCHAR(36)">
                <constraints nullable="false" references="users(id)" foreignKeyName="fk_ad_reports_reporter"/>
            </column>
            <column name="reason" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="comment" type="TEXT"/>
            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex tableName="ad_reports" indexName="idx_ad_reports_ad_id">
            <column name="ad_id"/>
        </createIndex>
        <createIndex tableName="ad_reports" indexName="idx_ad_reports_reporter">
            <column name="reporter_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
